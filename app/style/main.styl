@import "rupture"
@import "./mixins/mixin.styl"
@import "./fonts.styl"

/*
 * ========================
 * VARS
 * ========================
 */

// fonts
font-base 	= "Montserrat", sans-serif
font-second = "Muller", sans-serif
font-third 	= "OpenSans", sans-serif

// color 
white      = #ffffff
orange 		 = #F79000
grey 			 = #292929
grey-light = #343434


/*
 * ========================
 * BASE 
 * ========================
 */
 
// Adaptive
flex-version = flex
support-for-ie = false
vendor-prefixes = official

rupture.scale =       	0    576px    768px    992px    1200px
rupture.scale-names =  "xs"     "sm"     "md"     "lg"      "xl"

*
	padding 0
	margin 0
	box-sizing border-box
	&::after
		padding 0
		margin 0
		box-sizing: border-box
	&::before
		padding 0
		margin 0
		box-sizing: border-box

html
	font-size 16px

body
	font-weight 400
	line-height 1.5
	font-family font-base
	color grey
	size 100%
	overflow-x hidden

p 
	line-height 26px
	
	+below(lg)
		line-height 1.3em
		
a 
	color inherit
	text-decoration none
	
img 
	max-width 100%
	height auto
		
		
/* container */
.wrap
	width 100%
	max-width 1200px
	min-width 320px
	height 100%
	margin 0 auto
	padding: 0 15px
	
/* Buttons*/
.btn
	display inline-flex
	justify-content center
	align-items center
	width 100%
	max-width 270px
	height 48px
	font 500 16px/1 font-second 
	background-color transparent
	border none
	border-radius 50px
	transition()
	
	&:hover
		opacity .8
		cursor pointer
	
.btn-orange
	@extend .btn
	color white
	background-color orange
	
.btn-border
	@extend .btn
	color #474747
	border 2px solid orange
	

/* Typography */
.h2 
	font 600 36px/44px font-base
	color grey-light
	
	+below(lg)
		font-size 28px
		line-height 36px
	
	+below(sm)
		font-size 24px
		line-height 29px
	
.h2-white
	@extend .h2
	color white
	

.h3
	font 500 24px/29px font-second
	color #202020
	
	+below(lg)
		font-size 20px
		line-height 24px
		
.h4
	font 500 20px/24px font-base
	color #2d2d2d

/* Form elements*/
.input
	display inline-block
	width 100%
	max-width 235px
	height 48px
	padding 0 29px
	font 400 16px/48px font-third
	color white 
	background-color transparent
	border 2px solid #979797
	border-radius 50px
	outline none
	+placeholder()
		color white
		
/*
 * ========================
 * PROMO
 * ========================
 */
.promo 
	padding-top 212px
	padding-bottom 267px
	background resolve("promo-bg.jpg") no-repeat center / cover
	
	&-title
		margin-bottom 50px
		font 400 40px/54px font-second
		color white
		
		span 
			display block
			font-weight 700
			font-size 54px
			
	.btn-border
		display flex
		margin-top 18px
		color white
		border-color white
	
	+below(lg)
		padding-top 150px
		padding-bottom 170px
		
		&-info
			padding-left 40px
		
		&-title
			font-size 30px
			line-height 40px
			
			span 
				font-size 40px
				
	+below(md)
		padding-top 100px
		padding-bottom 110px
		
		&-title
			font-size 26px
			line-height 34px
			
			span 
				font-size 34px
				
	+below(sm)
		&-info
			padding-left 0
			
		&-title
			margin-bottom 30px
			font-size 22px
			line-height 30px
			
			span
				font-size 30px
				
	+below(480px)
		height 490px
		padding-top 40px
		padding-bottom 26px
		background-image resolve("promo-bg-mobile.jpg")
		
		&-info
			display flex 
			flex-direction column
			justify-content space-between
			height 100%
			
		&-title
			margin-bottom 0
			font-size 20px
			line-height 26px
			
			span
				font-size 26px


/*
 * ========================
 * ABOUT
 * ========================
 */
.about
	position relative
	padding-top 81px
	padding-bottom 83px
	
	&-decor
		position absolute
		top 0
		right 45px
		width 425px
		height 404px
		fill orange
		opacity .08
		transform rotate(30deg)
	
	&-headline
		margin-bottom 65px
	
		p
			margin-top 27px
			
	&-list
		display flex 
		flex-wrap wrap
		align-items flex-start
		margin 0 -15px
		
	&-item
		display flex 
		align-items flex-start
		width 33%
		margin-bottom 53px
		padding 0 15px
	
	&-icon
		flex-shrink 0
		width 70px
		height 70px
		fill orange
	
	&-text
		padding-left 30px
		font-size 18px
		
		
	+below(lg)

		&-icon
			width 55px
			height 55px
			
		&-text
			padding-left 20px
			font-size 16px
			
	+below(md)
		&-decor
			display none

		&-icon
			width 45px
			height 45px
			
		&-text
			font-size 14px
			
	+below(sm)
		&-item
			width 50%
						
	+below(480px)
		&-item
			width 100%
			margin-bottom 40px
			
		&-icon
			width 51px
			height 51px
		
		&-text
			padding-left 11px
			font-size 16px
			line-height 20px


/*
 * ========================
 * SERVICES
 * ========================
 */
.services
	margin-bottom 84px
	
	&-list
		display flex
		flex-wrap wrap 
		margin 0 -15px
		padding-top 30px
			
	&-item-lg,
	&-item	
		position relative
		margin 0 15px 40px
		background-color #f5f5f5
		overflow hidden
		transition(.45s)
		
		.h3,
		.h3 span,
		p
			transition(.45s)
	
		&:hover
			background-color #f89c1d
			
			.h3,
			.h3 span,
			p
				color white
				
			.services-icon
				opacity 0
				transform translateY(20px)
				
			.services-order
				opacity 1
				transform translateY(0)

	&-item-lg
		width calc(50% - 30px)
		height 350px
		padding-top 22px
		padding-left 20px
		background-repeat no-repeat
		background-position bottom right
		
	&-item
		display flex 
		flex-direction column
		justify-content space-between
		width calc(25% - 30px)
		min-height 170px
		padding 16px 20px 22px
		
		.h3 span
			font: 400 20px/1 font-third
			color #2b2b2b 

	&-headline p 
		font 400 18px/24px font-third
		color #202020
	
	&-icon
		width 67px
		height 67px
		fill #f89c1d
		transition(.45s)
		
	&-order
		position absolute
		left 20px
		bottom 55px
		font-weight 500
		font-size: 22px
		text-decoration underline
		color white
		opacity 0
		transition(.45s)
		transform translateY(40px)
		
		&:hover
			text-decoration none
	
	+below(lg)
		.h3 span 
			font-size 16px
		
	+below(md)
		&-headline p 
			font-size 14px
			
		.h3
			font-size 16px
			line-height 20px
			
			span 
				font-size 14px
				
		&-list
			margin 0 -6px
		
		&-item-lg,
		&-item 
			margin 0 6px 30px
			
		&-item-lg 
			width calc(50% - 12px)
			height 280px
			background-size 330px
		
		&-item 
			width calc(25% - 12px)
			
		&-order
			font-size 18px
			
	+below(sm)
		
		&-item 
			width calc(50% - 12px)
			
	+below(xs)
		
		&-item-lg
			width 100%
			height 295px
			background-size 320px 210px
			background-position-x right
			
	+below(400px)
		.h3 
			font-size 24px
			line-height 29px
			
		&-list
			margin 0 -15px
			
		&-item,
		&-item-lg
			margin 0 0 20px
			
		&-item 
			width 100%
			

/*
 * ========================
 * SELL
 * ========================
 */
.sell
	padding 38px 0
	background-color #1f1f1f
	
	&-headline
		display flex 
		align-items center
		
	&-icon
		size 40px
		margin-left 15px
		fill #f99500
	
	&-list
		display flex 
		align-items flex-start
		margin 0 -10px
		padding-top 50px
	
	&-item
		display flex
		align-items flex-start
		width 33%	
		padding 0 10px
		color white
	
	&-number
		font 900 81px/1 font-second
		color orange
		
	&-text
		padding-left 30px
		font-weight 500
		font-size 18px
		color white
		
	+below(lg)
		&-text 
			padding-left 18px
			
	+below(md)
		&-text 
			font-size 16px
		
		&-number
			font-size 60px
			
	+below(sm)
		padding-top 45px
		padding-bottom 30px
		
		&-list 
			flex-wrap wrap 
		
		&-item 
			width 50%
			margin-bottom 15px
			
	+below(xs)
		&-list 
			padding-top 30px
			
		&-item
			width 100%
			
	+below(400px)
		&-number
			font-size 40px
			
		&-text 
			font-size 14px


/*
 * ========================
 * PURCHASE
 * ========================
 */		
.purchase
	padding-top 160px
	padding-bottom 80px
	
	&-list
		display flex 
		flex-wrap wrap 
		align-items flex-start
		margin 0 -15px
		padding-top 30px
	
	&-item
		width calc(33% - 30px)
		margin 0 15px 40px

	&-banner
		width 100%
		max-width 370
		margin-bottom 9px
		line-height 0
		box-shadow 0px 3px 20px rgba(0, 0, 0, 0.16)
		
	.h3
		color grey-light
		
	+below(lg)
		padding-top 110px
		padding-bottom 50px
		
	+below(md)
		padding-top 80px
		padding-bottom 30px
		
		&-item 
			width calc(50% - 30px)	
			
	+below(sm)
		padding-top 60px
				
	+below(420px)
		padding-top 44px
		padding-bottom 46px
		
		.h3
			padding-left 15px
			
		&-list 
			margin 0 -15px

		&-item 
			width 100%
			margin 0 0 30px
			

/*
 * ========================
 * REDEEMED
 * ========================
 */		
.redeemed
	padding-bottom 90px
	
	.wrap 
		overflow hidden
	
	&-slider
		padding-top 40px
		
	&-button-prev,
	&-button-next
		display inline-flex
		justify-content center
		align-items center
		size 44px
		margin-top 20px
		border-radius 50%
		background-color orange
		transition()
		
		&:hover
			cursor pointer
			opacity .8
		
		svg
			size 16px
			fill white
		
	&-button-prev
		transform rotate(90deg)
		margin-right 10px
		
	&-button-next
		transform rotate(-90deg)
	&-card
		max-width 370px
	
		&-banner
			max-width 370px
			line-height 0
			
			img 
				width 100%
				height auto
				object-fit cover
			
		&-info
			padding 20px 25px 45px
			box-shadow 0px 3px 20px rgba(0, 0, 0, 0.16)
		
			p 
				padding 20px 0
				font-size 14px

		&-price
			font 500 24px/29px font-second
			color grey-light
			

/*
 * ========================
 * CREDIT
 * ========================
 */	
.credit
	
	&-inner
		display flex 
		align-items flex-start
	
	&-info
		flex-shrink 1.5
		width 100%
		max-width 560px 
		padding-right 10px
		
		p
			padding 30px 0
			font-size 22px
			
			span 
				display block
				margin-top 30px
				padding-right 70px
				font-size 14px
				
	&-brands 
		flex-shrink 1
			
	+below(sm)
		&-inner
			flex-direction column
			
		&-info
			margin-bottom 35px
			
			p 
				font-size 16px
				line-height 26px
				

/*
 * ========================
 * PLUS
 * ========================
 */	
.plus
	padding-top 176px
	padding-bottom 100px
	background resolve("plus-bg.jpg") no-repeat center top / cover
	
	&-inner
		display flex 
		align-items center
	
	&-info
		flex-shrink 2
		width 100%
		max-width 625px
		margin-right 88px
	
	&-list
		padding-top 45px
	
	&-item
		display flex 
		align-items flex-start
		
		&:not(:last-child)
			margin-bottom 25px
	
	&-icon
		width 30px
		height 27px
		background resolve("check.png") no-repeat center
		
	span 
		width calc(100% - 45px)
		padding-left 15px
		font-weight 600
		font-size 14px
		color white
	
	&-action
		flex-shrink 1
	
		.btn-orange 
			max-width 346px
			margin-top 35px
			
	+below(md)
		&-info
			margin-right 25px			
			
	+below(sm)
		padding 60px 0
		background-image none
		background-color #1f1f1f
		
		&-inner
			flex-direction column
			align-items flex-start
			
		&-info
			margin-right 0
			margin-bottom 45px
			
	+below(xs)
		padding-top 40px
		padding-bottom 55px