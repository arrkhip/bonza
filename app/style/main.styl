@import "rupture"
@import "./mixins/mixin.styl"
@import "./fonts.styl"

/*
 * ========================
 * VARS
 * ========================
 */

// fonts
font-base 	= "Montserrat", sans-serif
font-second = "Muller", sans-serif
font-third 	= "OpenSans", sans-serif

// color 
white      = #ffffff
orange 		 = #F79000
grey 			 = #292929
grey-light = #343434


/*
 * ========================
 * BASE 
 * ========================
 */
 
// Adaptive
flex-version = flex
support-for-ie = false
vendor-prefixes = official

rupture.scale =       	0    576px    768px    992px    1200px
rupture.scale-names =  "xs"     "sm"     "md"     "lg"      "xl"

*
	padding 0
	margin 0
	box-sizing border-box
	&::after
		padding 0
		margin 0
		box-sizing: border-box
	&::before
		padding 0
		margin 0
		box-sizing: border-box

html
	font-size 16px

body
	font-weight 400
	line-height 1.5
	font-family font-base
	color grey
	size 100%
	overflow-x hidden

p 
	line-height 26px
	
	+below(lg)
		line-height 1.3em
		
		
/* container */
.wrap
	width 100%
	max-width 1200px
	min-width 320px
	height 100%
	margin 0 auto
	padding: 0 15px
	
/* Buttons*/
.btn
	display inline-flex
	justify-content center
	align-items center
	width 100%
	max-width 270px
	height 48px
	font 500 16px/1 font-second 
	background-color transparent
	border none
	border-radius 50px
	transition()
	
	&:hover
		opacity .8
		cursor pointer
	
.btn-orange
	@extend .btn
	color white
	background-color orange
	
.btn-border
	@extend .btn
	color #474747
	border 2px solid orange
	

/* Typography */
.h2 
	font 600 36px/44px font-base
	color grey-light
	
.h2-white
	@extend .h2
	color white
	

/* Form elements*/
.input
	display inline-block
	width 100%
	max-width 235px
	height 48px
	padding 0 29px
	font 400 16px/48px font-third
	color white 
	background-color transparent
	border 2px solid #979797
	border-radius 50px
	outline none
	+placeholder()
		color white
		
/*
 * ========================
 * PROMO
 * ========================
 */
.promo 
	padding-top 212px
	padding-bottom 267px
	background resolve("promo-bg.jpg") no-repeat center / cover
	
	&-title
		margin-bottom 50px
		font 400 40px/54px font-second
		color white
		
		span 
			display block
			font-weight 700
			font-size 54px
			
	.btn-border
		display flex
		margin-top 18px
		color white
		border-color white
	
	+below(lg)
		padding-top 150px
		padding-bottom 170px
		
		&-info
			padding-left 40px
		
		&-title
			font-size 30px
			line-height 40px
			
			span 
				font-size 40px
				
	+below(md)
		padding-top 100px
		padding-bottom 110px
		
		&-title
			font-size 26px
			line-height 34px
			
			span 
				font-size 34px
				
	+below(sm)
		&-info
			padding-left 0
			
		&-title
			margin-bottom 30px
			font-size 22px
			line-height 30px
			
			span
				font-size 30px
				
	+below(480px)
		height 490px
		padding-top 40px
		padding-bottom 26px
		background-image resolve("promo-bg-mobile.jpg")
		
		&-info
			display flex 
			flex-direction column
			justify-content space-between
			height 100%
			
		&-title
			margin-bottom 0
			font-size 20px
			line-height 26px
			
			span
				font-size 26px


/*
 * ========================
 * ABOUT
 * ========================
 */
.about
	position relative
	padding-top 81px
	padding-bottom 83px
	
	&-decor
		position absolute
		top 0
		right 45px
		width 425px
		height 404px
		fill orange
		opacity .08
		transform rotate(30deg)
	
	&-headline
		margin-bottom 65px
	
		p
			margin-top 27px
			
	&-list
		display flex 
		flex-wrap wrap
		align-items flex-start
		margin 0 -15px
		
	&-item
		display flex 
		align-items flex-start
		width 33%
		margin-bottom 53px
		padding 0 15px
	
	&-icon
		flex-shrink 0
		width 70px
		height 70px
		fill orange
	
	&-text
		padding-left 30px
		font-size 18px
		
		
	+below(lg)

		&-icon
			width 55px
			height 55px
			
		&-text
			padding-left 20px
			font-size 16px
			
	+below(md)
		&-decor
			display none

		&-icon
			width 45px
			height 45px
			
		&-text
			font-size 14px
			
	+below(sm)
		&-item
			width 50%
						
	+below(480px)
		&-item
			width 100%
			margin-bottom 40px
			
		&-icon
			width 51px
			height 51px
		
		&-text
			padding-left 11px
			font-size 16px
			line-height 20px

			